<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buddy.buddysampleapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

        <permission android:name="com.buddy.buddysampleapp.permission.C2D_MESSAGE" android:protectionLevel="signature" />
        <uses-permission android:name="com.buddy.buddysampleapp.permission.C2D_MESSAGE" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SampleSelectorActivity"
            android:label="@string/title_activity_sample_selector" >
        </activity>
        <activity
            android:name=".CheckinsActivity"
            android:label="@string/title_activity_checkins" >
        </activity>
        <activity
            android:name=".FileActivity"
            android:label="@string/title_activity_file" >
        </activity>
        <activity
            android:name=".PushActivity"
            android:label="@string/title_activity_push" >
        </activity>

        <receiver
            android:name=".PushActivity$PushNotificationReceived"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.buddy.buddysampleapp" />
            </intent-filter>
        </receiver>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
